  .container
    .row
      .span7.headline
        %h2 Introducing:
        %h1 
          Pill Pack by 
          %img{:src => "../images/logo-mini-white.png", :alt => "Minda"}
      .span5
        .signup-form
          <link href="http://cdn-images.mailchimp.com/embedcode/slim-081711.css" rel="stylesheet" type="text/css">
